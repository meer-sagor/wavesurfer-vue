{
  "author": "Meer Sagor",
  "name": "@meersagor/wavesurfer-vue",
  "version": "3.0.0",
  "description": "Vue 3 composables and components for WaveSurfer.js with modular plugin architecture",
  "private": false,
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/meer-sagor/wavesufer-vue.git"
  },
  "bugs": {
    "url": "https://github.com/meer-sagor/wavesufer-vue/issues"
  },
  "homepage": "https://docs-wavesurfer.meersagor.com",
  "main": "./dist/@meersagor-wavesurfer-vue.cjs",
  "module": "./dist/@meersagor-wavesurfer-vue.js",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/@meersagor-wavesurfer-vue.js",
      "require": "./dist/@meersagor-wavesurfer-vue.cjs"
    },
    "./core": {
      "types": "./dist/src/core/index.d.ts",
      "import": "./dist/@meersagor-wavesurfer-vue.js",
      "require": "./dist/@meersagor-wavesurfer-vue.cjs"
    },
    "./plugins": {
      "types": "./dist/src/plugins/index.d.ts",
      "import": "./dist/@meersagor-wavesurfer-vue.js",
      "require": "./dist/@meersagor-wavesurfer-vue.cjs"
    }
  },
  "types": "./dist/src/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "wavesurfer",
    "vue",
    "vue3",
    "composable",
    "plugins",
    "modular",
    "audio",
    "waveform",
    "player",
    "recorder",
    "timeline",
    "zoom",
    "minimap"
  ],
  "scripts": {
    "build": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "link-pack": "(yarn --global unlink '@meersagor/wavesurfer-vue' || true) && yarn --global link",
    "dev": "vite",
    "preview": "vite preview",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "deploy": "./deploy.sh",
    "release:create": "./release.sh create",
    "release:version": "./release.sh version",
    "release:status": "./release.sh status",
    "release:full": "./release.sh full"
  },
  "dependencies": {
    "vue": "^3.5.12",
    "wavesurfer.js": "^7.10.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vue-tsc": "^2.1.10"
  }
}
